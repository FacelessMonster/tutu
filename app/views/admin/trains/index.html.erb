

<h1><%= t('trains')%></h1>

<table>
  <thead>
    <tr>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @trains.each do |train| %>
      <tr>
        <td><%= train.number %></td>
        <td><%= link_to t('show'), [:admin, train] %></td>
        <td><%= link_to t('edit'), edit_admin_train_path(train) %></td>
        <td><%= link_to t('destroy'), [:admin, train], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('new_train'), new_admin_train_path %><br/>
