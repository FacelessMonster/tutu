<div class="row">
<div class="col-sm-6">
<h1><%= t('editing_route') %> "<%= @route.name %>"</h1>
<%= render 'form', route: @route %>
</div>
<div class="col-sm-6">
<b><%= t('route') %>:</b>
<ul id="stations" class="list-group sortable">
  <% @sr.each_with_sortable_id do |sr, sortable_id| %>
      <%= link_to sr.railway_station.title, [:admin, sr.railway_station], class: "list-group-item", id: sortable_id %>
  <% end %>
</ul>
</div>
</div>
<%= link_to t('show'), admin_route_path(@route) %>|
<%= link_to t('back'), admin_routes_path %>
