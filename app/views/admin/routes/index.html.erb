

<h1><%= t('routes') %></h1>

<table>
  <thead>
    <tr>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td><%= route.name %></td>
        <td><%= link_to t('show'), admin_route_path(route) %></td>
        <td><%= link_to t('edit'), edit_admin_route_path(route) %></td>
        <td><%= link_to t('destroy'), admin_route_path(route), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('new_route'), new_admin_route_path %><br/>
